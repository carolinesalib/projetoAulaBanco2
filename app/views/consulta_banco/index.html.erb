<h1>Consultar no banco</h1>

<div class="row">
  <div class="col-md-12">
    <% if @erro %>
    <div class="alert alert-dismissible alert-danger">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>Oh snap!</strong> <%= @erro %>
    </div>
    <% end %>
    <form action="<%=consultar_new_consulta_banco_path%>" method="get">
    <div class="form-group">
      <textarea class="form-control" rows="3" id="query" name="query"></textarea>
    </div>
    <input type='submit' class="btn btn-default" value="Consultar"/>
  </form>
  </div>
</div>

<% if @resultado && @resultado.to_a.size > 0 %>
<div class="row">
  <div class="col-md-12">
  <table class="table table-striped table-hover ">
    <thead>
      <tr>
        <% @resultado.to_a[0].each do |titulo|%>
        <th> <%= titulo[0] %> </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @resultado.to_a.size.times do |linha| %>
      <tr>
        <% @resultado.to_a[linha].size.times do |coluna|%>
        <td><%= @resultado.to_a[linha].to_a[coluna][1] %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
<% end %>
